{% if isImported %}
    <canvas id="glcanvas" width="100px" height="100px"></canvas>

    <script type="text/javascript" src="{{ styleDir }}js/libs.core.min.js"></script>
    <script type="text/javascript" src="{{ styleDir }}js/cables.min.js"></script>

    <script type="text/javascript" src="{{ styleDir }}js/ops.js"></script>

    <script>

        function showError(err) {
            alert(err);
        }

        document.addEventListener("DOMContentLoaded", function (event) {
            CABLES.patch = new CABLES.Patch(
                {
                    patchFile: '{{ styleDir }}js/polyshapes.json',
                    prefixAssetPath: '{{ styleDir }}/',
                    glCanvasId: 'glcanvas',
                    glCanvasResizeToWindow: false,
                    onError: showError
                });
        });

    </script>
{% endif %}
