<div class="wrap">
    <div class="icon32"></div>
    <h2>{{ "page_settings_mainheadline"|i18n }}</h2>
    <h3>{{ "page_settings_headline"|i18n }} "{{ account.email }}"</h3>
    <div id="polyshapes_auth">
        <div class="metabox-holder columns-1">
            <div class="meta-box-sortables ui-sortable">
                <div class="postbox">
                    <h2 class="hndle"><span>{{ "page_settings_apikey_headline"|i18n }}</span>
                    </h2>
                    <div class="inside">
                        <p>
                            {{ "page_settings_apikey_login"|i18n }} {{ account.email }}<br/>
                            {{ "page_settings_apikey_key"|i18n }} {{ apikey }}
                        </p>
                    </div>
                </div>
                <div class="postbox">
                    <h2 class="hndle"><span>{{ "page_settings_block1_headline"|i18n }}</span>
                    </h2>
                    <div class="inside">
                        <p>
                            {{ "page_settings_block1_text"|i18n }}
                        </p>
                    </div>
                </div>
                <div class="postbox">
                    <h2 class="hndle"><span>{{ "page_settings_block2_headline"|i18n }}</span>
                    </h2>
                    <div class="inside">
                        {{ "page_settings_block2_text"|i18n }}<br/><br/>
                        <form action="{{ action_url }}" method="POST">
                            <input type="hidden" name="action" value="polyshapes_logout">
                            <input class="button-primary" type="submit" name="submit"
                                   value="{{ "page_settings_block2_button"|i18n }}"/>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
