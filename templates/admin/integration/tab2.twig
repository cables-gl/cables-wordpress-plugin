<div id="poststuff">
    <div id="post-body" class="metabox-holder columns-1">
        <div id="post-body-content">
            <div class="meta-box-sortables ui-sortable">
                <div class="postbox">
                    <div class="inside">
                        <p>
                            {{ "page_integration_tab2_location_headline"|i18n }}<br/>
                            <input type="checkbox" name="hero" id="polyshapes_hero"/>
                            <label for="polyshapes_hero">{{ "page_integration_tab2_location_hero"|i18n }}</label>
                            <input type="checkbox" name="background" id="polyshapes_background"/>
                            <label for="polyshapes_background">{{ "page_integration_tab2_location_background"|i18n }}</label>
                            <input type="checkbox" name="footer" id="polyshapes_footer"/>
                            <label for="polyshapes_footer">{{ "page_integration_tab2_location_footer"|i18n }}</label>
                            <input type="checkbox" name="custom" id="polyshapes_custom"/>
                            <label for="polyshapes_custom">{{ "page_integration_tab2_location_custom_field"|i18n }}</label>
                        </p>
                        <p>
                            {{ "page_integration_tab2_pagetype_headline"|i18n }}<br/>
                            <input type="checkbox" name="home" id="polyshapes_home"/>
                            <label for="polyshapes_home">{{ "page_integration_tab2_pagetype_home"|i18n }}</label>
                            <input type="checkbox" name="all" id="polyshapes_all"/>
                            <label for="polyshapes_all">{{ "page_integration_tab2_pagetype_all"|i18n }}</label>
                            <input type="checkbox" name="selected" id="polyshapes_selected"/>
                            <label for="polyshapes_selected">{{ "page_integration_tab2_pagetype_selected_field"|i18n }}</label>
                            <select id="page_type" name="polyshapes_page_type">
                                <option value="">{{ "page_integration_tab2_pagetype_selected_label"|i18n }}</option>
                            </select>
                        </p>
                        <span><button class="button-primary" name="Login">{{ "page_integration_tab2_button_back"|i18n }}</button></span>
                        <span><button class="button-primary" name="Login">{{ "page_integration_tab2_button"|i18n }}</button></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br class="clear">
</div>